{{#if addNewQuestion}}
  <h1>New Question</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Your Question</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="notes">Your Notes</label>
          {{input value=notes id="notes"}}
        </div>

        <button {{action 'save1'}}>Save</button>
      </form>
    </div>

{{else}}
  <button {{action 'questionFormShow'}}>Add New Question</button>
{{/if}}

<!--  -->

{{yield}}
