{{#if addNewAnswer}}
    <div>
      <form>
        <div class="form-group">
          <label for="author">Your Name</label>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="content">Your Answer</label>
          {{input value=content id="content"}}
        </div>

        <button class="btn btn-primary btn-xs"{{action 'save'}}>Save Answer</button>
      </form>
    </div>

{{else}}
<center>
<h1>Answers</h1>
<button class="btn btn-warning btn-lg"{{action 'answerFormShow' question}}>Add Answer</button>
</center>

{{/if}}

{{yield}}
