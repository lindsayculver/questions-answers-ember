<li>Question from {{question.author}}: <br>{{question.content}}</li>

  {{#if isNotesShowing}}
    <p>{{question.notes}}</p>
  {{else}}
    <button class="btn btn-primary btn btn-xs"{{action 'notesShow'}}>Notes</button>
  {{/if}}
  {{update-question question=question update="update"}}
    <button class="btn btn-primary btn btn-xs" {{action 'delete' question}}>Delete</button><br>


{{yield}}
